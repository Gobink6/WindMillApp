                        android:textColor="#fff"
                        android:textStyle="bold"/>

                    <View
                        android:layout_width="5dp"
                        android:layout_height="0dp" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:background="#696B6C"
                        android:text="A"
                        android:gravity="center"
