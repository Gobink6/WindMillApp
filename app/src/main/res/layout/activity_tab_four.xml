<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Tab_four">
    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="30dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="5dp"
                        android:layout_height="0dp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/spacing_xsmall"
                            android:layout_marginLeft="@dimen/spacing_xsmall"
                            android:layout_marginRight="@dimen/spacing_xsmall"
                            android:layout_marginTop="@dimen/spacing_xsmall"
                            android:layout_weight="0"
                            android:visibility="visible"
                            app:cardCornerRadius="2.0dip"
                            app:cardElevation="2.0dip">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:orientation="horizontal"
                                android:paddingBottom="2dp"
                                android:paddingLeft="2dp"
                                android:paddingRight="@dimen/spacing_large"
                                android:paddingTop="2dp">


                                <View
                                    android:layout_width="@dimen/spacing_middle"
                                    android:layout_height="0.0dip" />

                                <RelativeLayout
                                    android:layout_width="135dp"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:id="@+id/ed_pow"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentLeft="true"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentTop="true"
                                        android:text="Power"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                        android:textColor="@color/green"
                                        android:textStyle="bold" />


                                    <TextView
                                        android:id="@+id/ed_id_pow"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentLeft="true"
                                        android:layout_alignParentStart="true"
                                        android:layout_below="@+id/ed_pow"
                                        android:text=""
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                                        android:textColor="#000" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignBaseline="@+id/ed_id_pow"
                                        android:layout_alignBottom="@+id/ed_id_pow"
                                        android:layout_centerHorizontal="true"
                                        android:text="kw"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                        android:textColor="#000" />

                                    <View
                                        android:layout_width="5dp"
                                        android:layout_height="0dp"
                                        android:layout_alignParentLeft="true"
                                        android:layout_alignParentStart="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="195dp"
                                        android:layout_marginStart="195dp" />
                                </RelativeLayout>
                            </LinearLayout>


                        </android.support.v7.widget.CardView>
                    </RelativeLayout>

                    <View
                        android:layout_width="10dp"
                        android:layout_height="0dp" />


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/spacing_xsmall"
                            android:layout_marginLeft="@dimen/spacing_xsmall"
                            android:layout_marginRight="@dimen/spacing_xsmall"
                            android:layout_marginTop="@dimen/spacing_xsmall"
                            android:layout_weight="0"
                            android:visibility="visible"
                            app:cardCornerRadius="2.0dip"
                            app:cardElevation="2.0dip">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:orientation="horizontal"
                                android:paddingBottom="2dp"
                                android:paddingLeft="2dp"
                                android:paddingRight="@dimen/spacing_large"
                                android:paddingTop="2dp">


                                <View
                                    android:layout_width="@dimen/spacing_middle"
                                    android:layout_height="0.0dip" />

                                <RelativeLayout
                                    android:layout_width="135dp"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:id="@+id/ed_cos"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentLeft="true"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentTop="true"
                                        android:text="Cosphi"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                        android:textColor="@color/green"
                                        android:textStyle="bold" />


                                    <TextView
                                        android:id="@+id/ed_id_cos"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentLeft="true"
                                        android:layout_alignParentStart="true"
                                        android:layout_below="@+id/ed_cos"
                                        android:text=""
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                                        android:textColor="#000" />

                                    <TextView
